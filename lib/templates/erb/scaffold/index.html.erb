<p id="notice"><%%= notice %></p>

<h1>Listing <%= plural_table_name.titleize %></h1>

<% if ['testcase', 'quiz', 'course'].include? singular_table_name -%>
<ul class="w3-ul w3-hoverable">
  <li class="w3-border">
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <% attributes.reject(&:password_digest?).each do |attribute| -%>
  <%% if <%= singular_table_name %>.<%= attribute.name %>.present? %>
          <p><span class="w3-tag w3-blue"><%%= <%= singular_table_name %>.<%= attribute.name %> %></span></p>
        <%% end %>
      <% end -%>
    <%% end %>
  </li>
</ul>

<% else -%>

<table>
  <thead>
    <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%= attribute.human_name %></th>
<% end -%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
      </tr>
    <%% end %>
  </tbody>
</table>
<% end -%>

<br>

<%%= link_to 'New <%= human_name %>', new_<%= singular_table_name %>_path %>
