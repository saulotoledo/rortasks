<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<ul class="w3-ul w3-hoverable">
  <li class="w3-border">
    <% @courses.each do |course| %>
        <% if course.code.present? %>
          <p><span class="w3-tag w3-blue"><%= course.code %></span></p>
        <% end %>
        <% if course.fullname.present? %>
          <p><span class="w3-tag w3-blue"><%= course.fullname %></span></p>
        <% end %>
        <% if course.shortname.present? %>
          <p><span class="w3-tag w3-blue"><%= course.shortname %></span></p>
        <% end %>
        <% if course.courseidnumber.present? %>
          <p><span class="w3-tag w3-blue"><%= course.courseidnumber %></span></p>
        <% end %>
        <% if course.summary.present? %>
          <p><span class="w3-tag w3-blue"><%= course.summary %></span></p>
        <% end %>
        <% if course.format.present? %>
          <p><span class="w3-tag w3-blue"><%= course.format %></span></p>
        <% end %>
        <% if course.numberofweekstopics.present? %>
          <p><span class="w3-tag w3-blue"><%= course.numberofweekstopics %></span></p>
        <% end %>
        <% if course.start.present? %>
          <p><span class="w3-tag w3-blue"><%= course.start %></span></p>
        <% end %>
        <% if course.hiddensections.present? %>
          <p><span class="w3-tag w3-blue"><%= course.hiddensections %></span></p>
        <% end %>
        <% if course.newsitemstoshow.present? %>
          <p><span class="w3-tag w3-blue"><%= course.newsitemstoshow %></span></p>
        <% end %>
        <% if course.showgrades.present? %>
          <p><span class="w3-tag w3-blue"><%= course.showgrades %></span></p>
        <% end %>
        <% if course.showactivityreports.present? %>
          <p><span class="w3-tag w3-blue"><%= course.showactivityreports %></span></p>
        <% end %>
        <% if course.maxuploadsize.present? %>
          <p><span class="w3-tag w3-blue"><%= course.maxuploadsize %></span></p>
        <% end %>
        <% if course.defaultroles.present? %>
          <p><span class="w3-tag w3-blue"><%= course.defaultroles %></span></p>
        <% end %>
          <% end %>
  </li>
</ul>


